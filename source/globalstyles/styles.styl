// globalstyles styles
/*==========================================================
Fonts
==========================================================*/
@font-face {
    font-family: 'Acari Sans';
    src: url('font/AcariSans-Regular.woff2') format('woff2'),
        url('font/AcariSans-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Acari Sans';
    src: url('font/AcariSans-Bold.woff2') format('woff2'),
        url('font/AcariSans-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
}

/*==========================================================
Color Theme
==========================================================*/
cd-darkblue = #1E3255
cd-turquoise = #3DA299
cd-lightgrey = #f7f7f7

/*==========================================================
Global Variables
==========================================================*/


/*==========================================================
General Tag Styles
==========================================================*/
html
    position relative
    width 100%
    height 100%
    overflow: hidden
body
    position relative
    color white
    background-color cd-darkblue
    font-family: "Acari Sans"
    text-align: left
    line-height: 130%
    font-size: 14pt
    // min-width 1504px
    height 100%
    overflow: hidden

h1
    font-size: 17pt
h2
    font-size: 15pt
p
    font-size: 12pt

select,
button,
label,
input
    font-family: "Acari Sans"


/*==========================================================
Global Variables
==========================================================*/
:root
    --table-max-height: auto